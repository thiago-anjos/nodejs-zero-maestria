{{!-- {{toJSON plainUserThoughts}} --}}
<div class="home-header">
  {{#if search}}
    <h1>O termo pesquisado foi: <span>{{search.title}}</span></h1><p>A pesquisa
      retornou
      {{searchTotal}}</p>{{else}}

    <h1>Todos os pensamentos</h1>
  {{/if}}

  <form action="/" method="get">
    <input type="text" name="search" placeholder="Buscar" />
    <input type="submit" class="btn" value="Buscar" />
  </form>

  <div class="order-container">
    <span>Ordernar por</span>
    <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="new" />
      <button type="submit"><i class="bi bi-arrow-up"></i></button>
    </form>
    <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="old" />
      <button type="submit"><i class="bi bi-arrow-down"></i></button>
    </form>
    <a href="/">Limpar</a>
  </div>

</div>

<ul class="list mt-4">
  {{#each plainUserThoughts}}
    <li>{{this.title}}
      por
      <span class="author">- {{this.User.name}}</span></li>
  {{/each}}
</ul>